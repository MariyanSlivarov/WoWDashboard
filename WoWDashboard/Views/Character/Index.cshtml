@model WoWDashboard.Models.Character

@{
    ViewData["Title"] = "Search Character";
}

<div class="container mt-5 fade-in slide-up" style="max-width: 600px;">
    <h2 class="mb-4 text-center" style="color: #d1d1e0;">Search WoW Character</h2>

    <form method="post" asp-action="Details" class="p-4 rounded" style="background-color: #1e1e2f; color: #d1d1e0;">
        <div class="mb-3">
            <label class="form-label">Character Name:</label>
            <input type="text" name="name" class="form-control" required />
        </div>
        <div class="mb-3">
            <label class="form-label">Realm:</label>
            <input type="text" name="realm" class="form-control" required />
        </div>
        <div class="mb-4">
            <label class="form-label">Region:</label>
            <select name="region" class="form-select" required>
                <option value="us">US</option>
                <option value="eu">EU</option>
                <option value="kr">KR</option>
                <option value="tw">TW</option>
                <option value="cn">CN</option>
            </select>
        </div>
        <div class="text-center">
            <button type="submit" class="btn btn-primary px-4 btn-animate">Search</button>
        </div>
    </form>
</div>
